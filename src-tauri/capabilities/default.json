{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "fs": {
    "all": true,
    "scope": [
      "**"
    ],
    "readFile": true,
    "writeFile": true,
    "readDir": true,
    "copyFile": true,
    "createDir": true,
    "removeDir": true,
    "removeFile": true,
    "renameFile": true,
    "exists": true
  },
  "permissions": [
    "core:default",
    "fs:default",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "core:window:allow-start-dragging",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:read-all",
    "fs:write-all",
    "opener:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-resource-read-recursive",
    "fs:allow-resource-write-recursive",
    "fs:allow-resource-write",
    "opener:allow-open-path",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "upload:default",
    "core:window:allow-toggle-maximize",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "x",
            {
              "validator": "\\."
            }
          ],
          "cmd": "",
          "name": "binaries/7zr",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "x",
            {
              "validator": "[\\s\\S]*"
            },
            {
              "validator": "[\\s\\S]*"
            }
          ],
          "cmd": "",
          "name": "binaries/unrar",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "shell:default"
  ]
}